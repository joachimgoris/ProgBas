package Extra;

import java.util.Scanner;

public class oef7 {

	public static void main(String[] args) {
		Scanner keyboard = new Scanner(System.in);
		String c;
		int code;
		double prijs, percentage;
		System.out.println("Geef prijs");
		prijs = keyboard.nextDouble();
		System.out.println("Geef code");
		c = keyboard.nextLine();
		code = (int)c.substring(0,1);
		switch(code){
			case 1:
				percentage = 0.06;
				break;
			case 2:
				percentage = 0.17;
				break;
			case 3:
				percentage = 0.19;
				break;
			case 4: 
				percentage = 0.25;
				break;
			case 5:
				percentage = 0.33;
				break;
			default:
				percentage = 0.21;
			}
		
		
	}

}
